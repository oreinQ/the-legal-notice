<div class="bg-white w-100 p-4">
    <div class="container m-lg-5">
        <div class="w-100">
            <div class="m-auto col-lg-6 col-12">
                <form method="POST" action="/api/posts/v2">
                    <div class="input-group mb-3">
                        <input type="text" name="search" class="form-control rounded-left border-0 bg-light"
                            placeholder="Search title">
                        <div class="input-group-append">
                            <button class="btn bg-light focus-none" type="submit">
                                <span
                                    class="material-icons-outlined text-secondary border-0 rounded-right text-center mt-2">search</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <% for(var i=0; i < data.length; i++) { %>
            <div class="mx-auto col-lg-9 col-12 m-4">
                <div class="card w-100 blue-bg text-light shadow border-0">
                    <div class="card-body p-2">
                        <div class="text-left dropdown">
                            <a class="btn btn-white text-light p-0 m-0 focus-none" id="dropdown">
                                <span class="material-icons">
                                    hdr_weak
                                </span>
                            </a>
                            <div id="dropdown-items" class="dropdown-menu border-0 p-0 shadow bg-white">
                                <a class="dropdown-item p-2 text-secondary p-3 rounded d-flex" href="#"><span
                                        class="material-icons-outlined px-1">
                                        delete_outline
                                    </span>Delete</a>
                                <a class="dropdown-item p-2 text-secondary p-3 rounded d-flex" href="#"><span
                                        class="material-icons-outlined px-1">
                                        create
                                    </span>Edit</a>
                            </div>
                        </div>
                        <div class="h5 card-text text-light py-0 p-3">
                            <div class="card-title h4 text-center text-light w-100"><%= data[i].title%></div>
                            <%= data[i].posts%>
                            <p class="text-right h6"><i>by <b><%= data[i].name%></b></i></p>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
    </div>
</div>